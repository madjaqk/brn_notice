<div id="subpageHeader">
	<div id="box9">
		<%= image_tag("logo1.gif")%> <span id="text9">BRN</span><span id="text10">Notice</span>
	</div>
</div>

<div class="formMain">
	<div class="form">
		<h3>Log In</h3>
		<form action="/sessions/create" method="post">
  			<div class="form-group">
				<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
				<p>E-mail address: <input type="email" name="email"></p>
				<p>Password: <input type="password" name="password"></p>
				<input type="submit" value="Log In">
			</div>
		</form>
	</div>
	<div class="form">
		<h3>Create An Account</h3>
		<%= simple_form_for @new_user, :url => "/users/create" do |f| %>
			<%= f.input :first_name %>
			<%= f.input :last_name %>
			<%= f.input :email %>
			<%= f.input :password %>
			<%= f.input :password_confirmation %>
			<%= f.button :submit %>
		<% end %>
	</div>
	<div id="last">
		<p>Or log in with <%= link_to "Facebook", "/auth/facebook/" %> or <%= link_to "Google", "/auth/google" %>!</p>
	</div>
</div>

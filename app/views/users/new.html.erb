<style type="text/css">
	div.form{
		width: 400px;
		border: 5px solid black;
		padding: 25px;
		margin-bottom: 25px;
	}

	h3{
		margin: 0px;
	}
</style>

<div class="form">
	<h3>Log In</h3>
	<form action="/sessions/create" method="post">
		<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
		<p>E-mail address: <input type="email" name="email"></p>
		<p>Password: <input type="password" name="password"></p>
		<input type="submit" value="Log In">
	</form>
</div>

<div class="form">
	<h3>Create an account</h3>
	<%= simple_form_for @new_user, :url => "/users/create" do |f| %>
		<%= f.input :first_name %>
		<%= f.input :last_name %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.button :submit %>
	<% end %>
</div>

<p>Or log in with <%= link_to "Facebook", "/auth/facebook/" %> or <%= link_to "Google", "/auth/google" %>!</p>